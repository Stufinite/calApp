{
  "presets": ["es2015", "react"],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
              "transform": "react-transform-hmr",
              // if you use React Native, change to "react-native" here
              "imports": ["react"],
               // it is important for Webpack HMR
              "locals": ["module"]
            }]
            // Note: you can put other transforms in array
        }]
      ]
    }
  }
}
